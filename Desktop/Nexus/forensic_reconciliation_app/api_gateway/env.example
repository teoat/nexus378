# =============================================================================
# API Gateway Environment Configuration
# =============================================================================

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3000
NODE_ENV=development

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=forensic-reconciliation-api
JWT_AUDIENCE=forensic-reconciliation-client

# =============================================================================
# CORS Configuration
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=mongodb://localhost:27017/forensic_reconciliation
TEST_DATABASE_URL=mongodb://localhost:27017/forensic_reconciliation_test

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=logs/api-gateway.log

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_MAX=100

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,csv
UPLOAD_DIR=uploads/

# =============================================================================
# Security Configuration
# =============================================================================
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# =============================================================================
# External Services Configuration
# =============================================================================
BANKING_SERVICE_URL=http://localhost:3001
BANKING_SERVICE_API_KEY=your-banking-service-api-key
BANKING_SERVICE_TIMEOUT=30000

CRM_SERVICE_URL=http://localhost:3002
CRM_SERVICE_API_KEY=your-crm-service-api-key
CRM_SERVICE_TIMEOUT=30000

FRAUD_SERVICE_URL=http://localhost:3003
FRAUD_SERVICE_API_KEY=your-fraud-service-api-key
FRAUD_SERVICE_TIMEOUT=30000

RISK_SERVICE_URL=http://localhost:3004
RISK_SERVICE_API_KEY=your-risk-service-api-key
RISK_SERVICE_TIMEOUT=30000

# =============================================================================
# Webhook Configuration
# =============================================================================
BANKING_WEBHOOK_SECRET=your-banking-webhook-secret
CRM_WEBHOOK_SECRET=your-crm-webhook-secret
FRAUD_WEBHOOK_SECRET=your-fraud-webhook-secret
RISK_WEBHOOK_SECRET=your-risk-webhook-secret

# =============================================================================
# Monitoring Configuration
# =============================================================================
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000
CPU_THRESHOLD=80.0
MEMORY_THRESHOLD=80.0
RESPONSE_TIME_THRESHOLD=1000

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_GRAPHQL=true
FEATURE_WEBSOCKETS=true
FEATURE_FILE_UPLOAD=true
FEATURE_REALTIME_UPDATES=true
FEATURE_ADVANCED_ANALYTICS=true

# =============================================================================
# Development Overrides
# =============================================================================
# Uncomment these for development/testing
# LOG_LEVEL=debug
# LOG_FORMAT=dev
# MONITORING_ENABLED=false
# FEATURE_GRAPHQL=false
# FEATURE_WEBSOCKETS=false

# =============================================================================
# Production Overrides
# =============================================================================
# Uncomment and set these for production
# NODE_ENV=production
# JWT_SECRET=your-production-jwt-secret-here
# DATABASE_URL=mongodb://username:password@host:port/database
# REDIS_PASSWORD=your-redis-password
# ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
# MONITORING_ENABLED=true
# LOG_LEVEL=warn


