# Production Environment Configuration
# Forensic Reconciliation Platform
# WARNING: Change all passwords in production!

# Database Configuration
POSTGRES_USER=forensic_prod_user
POSTGRES_PASSWORD=SecureProdPassword2024!
POSTGRES_DB=forensic_reconciliation_prod

# Neo4j Configuration
NEO4J_USER=neo4j
NEO4J_PASSWORD=SecureNeo4jPassword2024!

# Redis Configuration
REDIS_PASSWORD=SecureRedisPassword2024!

# RabbitMQ Configuration
RABBITMQ_USER=forensic_prod_user
RABBITMQ_PASSWORD=SecureRabbitMQPassword2024!

# MinIO Configuration
MINIO_USER=forensic_prod_user
MINIO_PASSWORD=SecureMinIOPassword2024!

# JWT Configuration
JWT_SECRET=YourSuperSecureJWTSecretKey2024!ChangeThisInProduction!
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# AI Service Configuration
AI_SERVICE_PORT=8000
AI_SERVICE_HOST=0.0.0.0
AI_MODEL_CACHE_SIZE=10GB
AI_MAX_CONCURRENT_JOBS=50

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_HTTPS_PORT=443
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_WS_URL=wss://api.yourdomain.com

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_USER=admin
GRAFANA_PASSWORD=SecureGrafanaPassword2024!
GRAFANA_PORT=3001

# Elasticsearch Configuration
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Security Configuration
ENCRYPTION_KEY=YourSuperSecureEncryptionKey2024!ChangeThisInProduction!
ENCRYPTION_ALGORITHM=AES-256-GCM
HASH_ALGORITHM=bcrypt
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/forensic
LOG_RETENTION_DAYS=90

# Performance Configuration
NODE_ENV=production
PM2_INSTANCES=max
PM2_EXEC_MODE=cluster
WORKER_THREADS=4

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16
NETWORK_GATEWAY=172.20.0.1
DNS_SERVERS=8.8.8.8,8.8.4.4

# Resource Limits
POSTGRES_MEMORY_LIMIT=2G
NEO4J_MEMORY_LIMIT=4G
REDIS_MEMORY_LIMIT=1G
ELASTICSEARCH_MEMORY_LIMIT=2G
AI_SERVICE_MEMORY_LIMIT=4G

# Auto-scaling Configuration
AUTO_SCALE_ENABLED=true
AUTO_SCALE_MIN_INSTANCES=2
AUTO_SCALE_MAX_INSTANCES=10
AUTO_SCALE_TARGET_CPU=70
AUTO_SCALE_TARGET_MEMORY=80

# Alerting Configuration
ALERT_EMAIL=alerts@yourdomain.com
ALERT_WEBHOOK=https://yourdomain.com/webhooks/alerts
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Maintenance Configuration
MAINTENANCE_MODE=false
MAINTENANCE_WINDOW=02:00-04:00
MAINTENANCE_TIMEZONE=UTC
