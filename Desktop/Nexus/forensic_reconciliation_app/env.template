# Forensic Reconciliation + Fraud Platform Environment Configuration
# Copy this file to .env and update the values according to your setup

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL - Metadata and Audit Logs
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=forensic_reconciliation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_change_this
POSTGRES_SSL=false
POSTGRES_MAX_CONNECTIONS=20

# Neo4j - Graph Database for Fraud Analysis
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=secure_password_change_this
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_POOL_SIZE=50

# Redis - Caching and Message Queues
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secure_password_change_this
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# RabbitMQ - Message Queue for AI Agent Communication
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=secure_password_change_this
RABBITMQ_VHOST=/
RABBITMQ_HEARTBEAT=60

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# AI Service Host and Port
AI_SERVICE_HOST=localhost
AI_SERVICE_PORT=8000
AI_SERVICE_WORKERS=4

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Alternative AI Providers
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local AI Models
LOCAL_LLM_ENDPOINT=http://localhost:11434
LOCAL_LLM_MODEL=llama2:13b

# =============================================================================
# EVIDENCE STORAGE CONFIGURATION
# =============================================================================

# MinIO - Object Storage for Evidence Files
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_change_this
MINIO_ENDPOINT=localhost:9000
MINIO_BUCKET=evidence-store
MINIO_REGION=us-east-1
MINIO_USE_SSL=false

# File Processing Configuration
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,gif,txt,csv,xlsx,doc,docx
OCR_ENABLED=true
EXIF_EXTRACTION_ENABLED=true
NLP_PROCESSING_ENABLED=true

# =============================================================================
# SECURITY AND AUTHENTICATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_session_secret_change_this
SESSION_MAX_AGE=86400000
SESSION_HTTP_ONLY=true
SESSION_SECURE=false

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Multi-Factor Authentication
MFA_ENABLED=true
MFA_ISSUER=Forensic Reconciliation Platform
MFA_ALGORITHM=SHA1
MFA_DIGITS=6
MFA_PERIOD=30

# =============================================================================
# API GATEWAY CONFIGURATION
# =============================================================================

# Gateway Host and Port
GATEWAY_HOST=localhost
GATEWAY_PORT=4000
GATEWAY_CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# GraphQL Configuration
GRAPHQL_INTROSPECTION_ENABLED=true
GRAPHQL_PLAYGROUND_ENABLED=true
GRAPHQL_TRACING_ENABLED=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend Host and Port
FRONTEND_HOST=localhost
FRONTEND_PORT=3000

# Tauri Configuration
TAURI_DEV_SERVER_URL=http://localhost:3000
