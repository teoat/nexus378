# Forensic Reconciliation + Fraud Platform - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Configuration
POSTGRES_PASSWORD=secure_password_change_in_prod
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nexus_forensics
POSTGRES_USER=nexus_user

# Neo4j Configuration
NEO4J_USER=neo4j
NEO4J_PASSWORD=secure_password_change_in_prod
NEO4J_URI=bolt://localhost:7687
NEO4J_DATABASE=neo4j

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secure_password_change_in_prod
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=nexus_user
RABBITMQ_PASSWORD=secure_password_change_in_prod
RABBITMQ_VHOST=nexus_forensics

# MinIO Configuration
MINIO_ROOT_USER=nexus_admin
MINIO_ROOT_PASSWORD=secure_password_change_in_prod
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=nexus_admin
MINIO_SECRET_KEY=secure_password_change_in_prod
MINIO_BUCKET=evidence-storage

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# AI Service Settings
AI_SERVICE_HOST=localhost
AI_SERVICE_PORT=8000
AI_SERVICE_URL=http://localhost:8000

# OpenAI Configuration (if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration (if using Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local AI Models (if using local models)
LOCAL_AI_MODEL_PATH=/app/models
LOCAL_AI_DEVICE=cpu  # or cuda for GPU

# =============================================================================
# GATEWAY CONFIGURATION
# =============================================================================

# Gateway Settings
GATEWAY_HOST=localhost
GATEWAY_PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_prod
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Prometheus Configuration
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure_password_change_in_prod
GRAFANA_HOST=localhost
GRAFANA_PORT=3000

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# Kibana Configuration
KIBANA_HOST=localhost
KIBANA_PORT=5601

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption Keys (generate secure keys for production)
ENCRYPTION_KEY=your_32_character_encryption_key_here
HASH_SALT=your_hash_salt_here

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Levels
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json, text
LOG_DESTINATION=console  # console, file, elasticsearch

# Log File Configuration (if using file logging)
LOG_FILE_PATH=/app/logs
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_FILES=10

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_AI_ANALYSIS=true
ENABLE_REAL_TIME_ALERTS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_SCANNING=true

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================

# External API Keys
BANKING_API_KEY=your_banking_api_key_here
CRM_API_KEY=your_crm_api_key_here
COMPLIANCE_API_KEY=your_compliance_api_key_here

# Webhook Configuration
WEBHOOK_URL=https://your-webhook-endpoint.com/webhook
WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
CACHE_MAX_SIZE=1000

# Queue Configuration
QUEUE_MAX_CONCURRENT_JOBS=10
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000  # 5 seconds in milliseconds

# Database Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_ACQUIRE_TIMEOUT=30000  # 30 seconds in milliseconds

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================

# Data Retention Policies
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=3650  # 10 years

# GDPR Configuration
GDPR_ENABLED=true
GDPR_DATA_PROCESSING_BASIS=legitimate_interest
GDPR_RETENTION_PERIOD=7_years

# SOX Compliance
SOX_ENABLED=true
SOX_AUDIT_TRAIL_ENABLED=true
SOX_DATA_INTEGRITY_CHECKING=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Settings
DEBUG_MODE=true
HOT_RELOAD=true
MOCK_EXTERNAL_APIS=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/nexus_forensics_test
TEST_REDIS_URL=redis://localhost:6379/1

